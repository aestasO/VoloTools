<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:volotools"
        xmlns:properties="clr-namespace:volotools.Properties"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="volotools.MainWindow"
        mc:Ignorable="d"
        Title="VoloTools" Height="450" Width="800">

    <Grid Background="{DynamicResource BackgroundDark}">
        <local:MainTabs x:Name="MainTabs" Margin="40,0,0,0"/>
        <local:SideMenu x:Name="SideMenu" HorizontalAlignment="Left"/>
    </Grid>
</mah:MetroWindow>
